{% extends 'base.html.twig' %}
{% block title %}
    Log in!
    
{% endblock %}
{% block body %}
    <form method="post">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-md-4 mt-5">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté(e) comme 
                                            
                            {{ app.user.username }}
                            , 
                                            
                            <a href="{{ path('app_logout') }}">
                                Me déconnecter
                                                
                            </a>
                        </div>
                    {% endif %}
                    <h1 class=" mb-3 font-weight-normal">
                        Connexion
                                        
                    </h1>
                    <div class="card p-4">
                        <label for="inputUsername">
                            Pseudo
                                            
                        </label>
                        <input type="texte" value="{{ last_username }}" name="username" id="inputUsername" class="form-control m-2" autocomplete="username" required autofocus>
                            <label for="inputPassword">
                                Password
                                                    
                            </label>
                            <input type="password" name="password" id="inputPassword" class="form-control m-2" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <button class="btn btn-lg btn-primary mt-4" type="submit">
                                        Me connecter
                                                                    
                                    </button>
                                    <a href="{{ path('app_register') }}" class="btn btn-secondary mt-3">
                                        M'inscrire
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            {% endblock %}
            